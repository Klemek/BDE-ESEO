<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="6dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/newsPicture"
        android:layout_height="130dp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:id="@+id/cardview"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-54dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/newsPicture">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0c0c0c"
            android:typeface="serif"
            android:textSize="24sp"
            android:maxLines="3"
            android:text="Nouveaux menus à la Caféteria !"
            android:id="@+id/newsTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff505050"
            android:textSize="14.5sp"
            android:text="@string/lorem"
            android:id="@+id/newsDesc"
            android:ellipsize="none"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:elegantTextHeight="true"
            android:layout_below="@+id/newsTitle"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff7d7d7d"
            android:textSize="15sp"
            android:text="Par BDE ESEO | 27/08/2015 à 12:20"
            android:id="@+id/newsAuthorDate"
            android:layout_below="@+id/newsDesc"
            android:layout_alignLeft="@+id/newsDesc"
            android:layout_alignStart="@+id/newsDesc"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>