<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorButtonNormal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvPriceCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:text="0.65â‚¬"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNameCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/tvPriceCartItem"
            android:layout_toStartOf="@+id/tvPriceCartItem"
            android:maxLines="1"
            android:text="Compote fraises des bois"
            android:textColor="@color/text_black_clear"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetailsCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvNameCartItem"
            android:layout_alignLeft="@+id/tvNameCartItem"
            android:layout_alignRight="@+id/tvNameCartItem"
            android:layout_alignStart="@+id/tvNameCartItem"
            android:layout_below="@+id/tvNameCartItem"
            android:layout_toRightOf="@+id/tvPriceCartItem"
            android:text="Jambon fromage nutella"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>