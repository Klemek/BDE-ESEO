<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp" >


            <View
                android:id="@+id/circleView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_done"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


            <ImageView
                android:id="@+id/imgDone"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_prepare"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl1"
            android:layout_toLeftOf="@+id/rl3"
            android:layout_toStartOf="@+id/rl3">

            <TextView
                android:id="@+id/commandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#42 Menu Maxi Best Of"
                android:textColor="@color/text_black_clear"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commandDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Jeudi 23 Juillet à 12:25"
                android:textColor="@color/text_light"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/commandPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:text="4.50€"
                android:textColor="@color/circle_done"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commandNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="n°42"
                android:textColor="@color/text_light"
                android:textSize="14dp"
                android:layout_gravity="end"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/rl2" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
