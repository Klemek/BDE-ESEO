<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_design">
    </include>
    <ScrollView android:layout_below="@id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff7d7d7d"
                android:textSize="15sp"
                android:id="@+id/tvAuthor"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#ff0c0c0c"
                android:typeface="serif"
                android:textSize="24sp"
                android:layout_below="@id/tvAuthor"
                android:id="@+id/tvTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:id="@+id/recyList"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:divider="@drawable/drawer_divider"
                android:dividerHeight="0.7dp"
                android:layout_below="@id/tvTitle"
                android:footerDividersEnabled="true"
                android:drawSelectorOnTop="true"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_below="@id/recyList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/tvHtml"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>